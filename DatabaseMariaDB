create or replace table CRAFTINGSKILL(
    CraftSkillID int primary key,
    AirplanesSteering int,
    BattleSuitsSteering int,
    LightVehiclesSteering int,
    HeavyVehiclesSteering int,
    SpaceshipsSteering int,
    BoatsSteering int,
